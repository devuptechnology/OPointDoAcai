<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SizesActivity">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/sizes_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_sizes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorPrimary"
            android:theme="@style/MainTheme">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_sizes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/path"
                app:contentScrim="?attr/colorPrimaryDark"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="Tamanhos">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_id_sizes"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="false"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="22dp">

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingRight="11dp">


                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view_200"
                            android:layout_width="150dp"
                            android:layout_height="138dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cardview_light_background"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cups" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="200 ml"
                                    android:textColor="#646464"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <Button
                            android:id="@+id/btn_200"
                            android:layout_width="102dp"
                            android:layout_height="28dp"
                            android:background="@drawable/botao"
                            app:layout_anchor="@+id/card_view_200"
                            app:layout_anchorGravity="bottom|center" />
                    </android.support.design.widget.CoordinatorLayout>

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="11dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view_300"
                            android:layout_width="150dp"
                            android:layout_height="138dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cardview_light_background"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cups" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="300 ml"
                                    android:textColor="#646464"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <Button
                            android:id="@+id/btn_300"
                            android:layout_width="102dp"
                            android:layout_height="28dp"
                            android:background="@drawable/botao"
                            app:layout_anchor="@+id/card_view_300"
                            app:layout_anchorGravity="bottom|center" />

                    </android.support.design.widget.CoordinatorLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="22dp">

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingRight="11dp">


                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view_400"
                            android:layout_width="150dp"
                            android:layout_height="138dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cardview_light_background"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cups" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="400 ml"
                                    android:textColor="#646464"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <Button
                            android:id="@+id/btn_400"
                            android:layout_width="102dp"
                            android:layout_height="28dp"
                            android:background="@drawable/botao"
                            app:layout_anchor="@+id/card_view_400"
                            app:layout_anchorGravity="bottom|center" />
                    </android.support.design.widget.CoordinatorLayout>

                    <android.support.design.widget.CoordinatorLayout
                        android:id="@+id/sizes_layout_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="11dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view_500"
                            android:layout_width="150dp"
                            android:layout_height="138dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cardview_light_background"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cups" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="500 ml"
                                    android:textColor="#646464" />

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <Button
                            android:id="@+id/btn_500"
                            android:layout_width="102dp"
                            android:layout_height="28dp"
                            android:background="@drawable/botao"
                            app:layout_anchor="@+id/card_view_500"
                            app:layout_anchorGravity="bottom|center" />

                    </android.support.design.widget.CoordinatorLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="22dp">

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:orientation="vertical">


                        <android.support.v7.widget.CardView
                            android:id="@+id/card_view_700"
                            android:layout_width="150dp"
                            android:layout_height="138dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="5dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/cardview_light_background"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/cups" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="700 ml"
                                    android:textColor="#646464"/>

                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <Button
                            android:id="@+id/btn_700"
                            android:layout_width="102dp"
                            android:layout_height="28dp"
                            android:background="@drawable/botao"
                            app:layout_anchor="@+id/card_view_700"
                            app:layout_anchorGravity="bottom|center" />
                    </android.support.design.widget.CoordinatorLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>